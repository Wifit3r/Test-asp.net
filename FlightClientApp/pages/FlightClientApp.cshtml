@page "/Flights"
@model FlightStorageService.Pages.FlightsModel
@{
    ViewData["Title"] = "Пошук рейсів";
}

<div class="max-w-5xl mx-auto p-6">
    <h2 class="text-2xl font-bold mb-6">Пошук рейсів</h2>

    <form method="post" class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div>
            <label class="block mb-1 font-medium text-gray-700">Дата</label>
            <input type="date" asp-for="Date" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" required />
        </div>

        <div>
            <label class="block mb-1 font-medium text-gray-700">Місто прибуття (необов'язково)</label>
            <input type="text" asp-for="ArrivalCity" placeholder="Наприклад, Perechyn" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
        </div>

        <div class="flex items-end">
            <button type="submit" class="w-full bg-blue-600 text-white rounded px-4 py-2 hover:bg-blue-700 transition">Шукати</button>
        </div>
    </form>

    @if (Model.Flights != null && Model.Flights.Count > 0)
    {
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200 rounded shadow">
                <thead class="bg-gray-800 text-white">
                    <tr>
                        <th class="py-2 px-4 text-left">Номер рейсу</th>
                        <th class="py-2 px-4 text-left">Дата та час відправлення</th>
                        <th class="py-2 px-4 text-left">Місто відправлення</th>
                        <th class="py-2 px-4 text-left">Місто прибуття</th>
                        <th class="py-2 px-4 text-left">Тривалість (хв)</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var flight in Model.Flights)
                    {
                        <tr class="hover:bg-gray-100">
                            <td class="py-2 px-4">@flight.FlightNumber</td>
                            <td class="py-2 px-4">@flight.DepartureDateTime.ToString("yyyy-MM-dd HH:mm")</td>
                            <td class="py-2 px-4">@flight.DepartureAirportCity</td>
                            <td class="py-2 px-4">@flight.ArrivalAirportCity</td>
                            <td class="py-2 px-4">@flight.DurationMinutes</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (Model.Flights != null)
    {
        <p class="text-yellow-600 font-medium mt-3">Рейси не знайдено.</p>
    }
</div>